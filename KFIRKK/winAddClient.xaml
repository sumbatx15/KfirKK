        <Label x:Name="lblXNeckle" Content="x" HorizontalAlignment="Left" Margin="11,403,0,0" VerticalAlignment="Top" Foreground="#FFF62971" Cursor="Hand" PreviewMouseDown="lblXNeckle_PreviewMouseDown"/>
